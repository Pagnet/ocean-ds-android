<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kotlin.jvm.functions.Function0" />

        <import type="kotlin.Unit" />

        <variable
            name="title"
            type="String" />

        <variable
            name="formatTypeTitle"
            type="br.com.useblu.oceands.core.Formatter" />

        <variable
            name="subtitle"
            type="String" />

        <variable
            name="formatTypeSubTitle"
            type="br.com.useblu.oceands.core.Formatter" />

        <variable
            name="description"
            type="String" />

        <variable
            name="formatTypeDescription"
            type="br.com.useblu.oceands.core.Formatter" />

        <variable
            name="badgeTitle"
            type="String" />

        <variable
            name="badgeVisible"
            type="Boolean" />

        <variable
            name="icon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="click"
            type="Function0&lt;Unit>" />

        <variable
            name="arrowVisible"
            type="Boolean" />

        <variable
            name="highlight"
            type="Boolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{() -> click.invoke()}"
        android:padding="@dimen/ocean_spacing_stack_xs">

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{icon}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:ocean_visible_or_gone="@{icon != null}"
            tools:src="@drawable/icon_generic_primary" />

        <TextView
            android:id="@+id/include10"
            style="@style/Ocean.Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{title}"
            android:textColor="@color/ocean_color_interface_dark_deep"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/imageView19"
            app:layout_constraintTop_toTopOf="parent"
            app:marginStart="@{icon != null ? 16 : 0}"
            app:ocean_text="@{title}"
            app:ocean_text_format="@{formatTypeTitle}"
            tools:text="Title" />

        <TextView
            android:id="@+id/include4"
            style="@style/Ocean.Paragraph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{subtitle}"
            android:textColor="@color/ocean_color_interface_dark_deep"
            app:highlight="@{highlight}"
            app:layout_constraintEnd_toStartOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="@+id/include10"
            app:layout_constraintTop_toBottomOf="@+id/include10"
            app:ocean_text="@{subtitle}"
            app:ocean_text_format="@{formatTypeSubTitle}"
            tools:text="Subtitle" />

        <TextView
            android:id="@+id/include20"
            style="@style/Ocean.Paragraph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{description}"
            android:textColor="@color/ocean_color_interface_dark_deep"
            app:highlight="@{highlight}"
            app:layout_constraintEnd_toEndOf="@+id/include4"
            app:layout_constraintStart_toStartOf="@+id/include4"
            app:layout_constraintTop_toBottomOf="@+id/include4"
            app:ocean_text="@{description}"
            app:ocean_text_format="@{formatTypeDescription}"
            app:ocean_visible_or_gone="@{description != null}"
            tools:text="Description" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:ocean_visible_or_invisible="@{arrowVisible}"
            app:srcCompat="@drawable/icon_chevron_right" />

        <include
            android:id="@+id/include6"
            layout="@layout/ocean_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/include10"
            app:layout_constraintStart_toEndOf="@+id/include10"
            app:layout_constraintTop_toTopOf="@+id/include10"
            app:layout_constraintVertical_bias="0.0"
            app:text="@{badgeTitle}"
            app:visible="@{badgeVisible}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>