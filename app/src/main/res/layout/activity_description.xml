<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.description.DescriptionActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#333FFFBB"
        android:orientation="vertical"
        android:paddingVertical="@dimen/ocean_spacing_inline_xs">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#333AAFCC"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/ocean_spacing_inline_xs">

            <include
                layout="@layout/ocean_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ocean_spacing_inline_xs"
                android:text="@{@string/ocean_sample_text_heading_1}" />

            <include
                layout="@layout/ocean_description_inverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ocean_spacing_inline_xs"
                android:text="@{@string/ocean_sample_text_heading_1}" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>