<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kotlin.jvm.functions.Function0" />

        <import type="kotlin.Unit" />

        <import type="br.com.useblu.oceands.R" />

        <variable
            name="text"
            type="String" />

        <variable
            name="icon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="click"
            type="Function0&lt;Unit>" />

        <variable
            name="disabled"
            type="Boolean" />

    </data>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonOceanTextSmall"
        style="@style/Ocean.Button.SM.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="@{!disabled}"
        android:onClick="@{() -> click.invoke()}"
        android:text="@{text}"
        app:icon="@{icon}"
        app:ocean_drawable_padding="@{icon == null ? 0 : R.dimen.ocean_spacing_stack_xxs}"
        tools:text="Small" />

</layout>