<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kotlin.jvm.functions.Function0" />

        <import type="kotlin.Unit" />

        <import type="br.com.useblu.oceands.R" />

        <variable
            name="text"
            type="String" />

        <variable
            name="click"
            type="Function0&lt;Unit>" />

        <variable
            name="showProgress"
            type="Boolean" />

        <variable
            name="icon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="disabled"
            type="Boolean" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            style="@style/Ocean.Button.SM.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="@{!disabled}"
            android:gravity="center"
            android:onClick="@{() -> click.invoke()}"
            android:text="@{showProgress ? @string/ocean_button_empty : text}"
            app:icon="@{showProgress ? null : icon}"
            app:ocean_drawable_padding="@{icon == null ? 0 : R.dimen.ocean_spacing_stack_xxs}"
            tools:text="Button Secondary" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:indeterminateTint="@color/ocean_color_interface_light_pure"
            android:progressTint="@color/ocean_color_interface_light_pure"
            app:ocean_visible_or_invisible="@{showProgress}" />

    </FrameLayout>

</layout>