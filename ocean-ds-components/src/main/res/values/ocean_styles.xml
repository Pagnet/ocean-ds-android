<resources>
    <!-- Base application theme. -->
    <style name="Ocean" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>


    <!-- BASE -->
    <style name="Ocean.Heading" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/font_family_highlight_extrabold</item>
        <item name="android:textColor">@color/ocean_color_interface_dark_pure</item>
        <item name="android:lineSpacingMultiplier">@dimen/ocean_line_height_medium</item>
    </style>

    <style name="Ocean.Subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_family_base_regular</item>
        <item name="android:lineSpacingMultiplier">@dimen/ocean_line_height_medium</item>
        <item name="android:textColor">@color/ocean_color_interface_dark_down</item>
    </style>

    <style name="Ocean.Paragraph" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_family_base_regular</item>
        <item name="android:lineSpacingMultiplier">@dimen/ocean_line_height_comfy</item>
        <item name="android:textColor">@color/ocean_color_interface_dark_down</item>
        <item name="android:textSize">@dimen/ocean_font_size_xs</item>
    </style>

    <style name="Ocean.Description" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_family_base_regular</item>
        <item name="android:lineSpacingMultiplier">@dimen/ocean_line_height_comfy</item>
        <item name="android:textColor">@color/ocean_color_interface_dark_down</item>
        <item name="android:textSize">@dimen/ocean_font_size_xxs</item>
    </style>

    <style name="Ocean.Caption" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_family_base_regular</item>
        <item name="android:lineSpacingMultiplier">@dimen/ocean_line_height_comfy</item>
        <item name="android:textColor">@color/ocean_color_interface_dark_down</item>
        <item name="android:textSize">@dimen/ocean_font_size_xxxs</item>
    </style>


    <!-- HEADING -->
    <style name="Ocean.Heading.1">
        <item name="android:textSize">@dimen/ocean_font_size_lg</item>
    </style>

    <style name="Ocean.Heading.2">
        <item name="android:textSize">@dimen/ocean_font_size_md</item>
    </style>

    <style name="Ocean.Heading.3">
        <item name="android:textSize">@dimen/ocean_font_size_sm</item>
    </style>

    <style name="Ocean.Heading.4">
        <item name="android:textSize">@dimen/ocean_font_size_xs</item>
        <item name="android:fontFamily">@font/font_family_highlight_bold</item>
    </style>


    <!-- HEADING.INVERSE -->
    <style name="Ocean.Heading.1.Inverse">
        <item name="android:textColor">@color/ocean_color_interface_light_pure</item>
    </style>

    <style name="Ocean.Heading.2.Inverse">
        <item name="android:textColor">@color/ocean_color_interface_light_pure</item>
    </style>

    <style name="Ocean.Heading.3.Inverse">
        <item name="android:textColor">@color/ocean_color_interface_light_pure</item>
    </style>

    <style name="Ocean.Heading.4.Inverse">
        <item name="android:textColor">@color/ocean_color_interface_light_pure</item>
    </style>


    <!-- SUBTITLE -->
    <style name="Ocean.Subtitle.1">
        <item name="android:textSize">@dimen/ocean_font_size_md</item>
    </style>

    <style name="Ocean.Subtitle.2">
        <item name="android:textSize">@dimen/ocean_font_size_sm</item>
    </style>


    <!-- SUBTITLE.INVERSE -->
    <style name="Ocean.Subtitle.1.Inverse">
        <item name="android:textColor">@color/ocean_color_interface_light_pure</item>
    </style>

    <style name="Ocean.Subtitle.2.Inverse">
        <item name="android:textColor">@color/ocean_color_interface_light_pure</item>
    </style>

</resources>